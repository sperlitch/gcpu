{
  "manifest_version": 2,
  "name": "hooligan",
  "version": "1.0.0",
  "description": "Be notified when your CPU has been running high.",
  "icons": { 
		"128": "img/icon128.png"
	},
  "browser_action": { 
    "default_icon": {
      "19": "img/icon19-gray.png",
      "38": "img/icon38-gray.png"
    },
		"default_popup": "popup.html"
	},
  "author": "Scott Perlitch",
	"background": {
    "scripts": [
			"background.js"
		],
    "persistent": false
  },
  "options_page": "options.html",
  "permissions": [
    "tabs",
		"system.cpu",
		"storage",
		"alarms",
		"contextMenus",
		"unlimitedStorage",
		"notifications"
	]
}
